<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SetVolumeActivity" >

	<Switch
	    android:id="@+id/switch_on"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_margin="18dp"
	    android:checked="false"
	    android:height="20dp" />

	<RelativeLayout
	    android:id="@+id/activity_layout"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" >

	    <TextView
	        android:id="@+id/headset_text_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="30dp"
	        android:text="@string/headset_text" />

	    <SeekBar
	        android:id="@+id/headset_control"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/headset_text_view"
	        android:layout_below="@id/headset_text_view"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="20dp" />

	    <TextView
	        android:id="@+id/speaker_text_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/headset_control"
	        android:layout_below="@+id/headset_control"
	        android:layout_marginTop="30dp"
	        android:text="@string/speaker_text" />

	    <SeekBar
	        android:id="@+id/speaker_control"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/headset_control"
	        android:layout_alignRight="@id/headset_control"
	        android:layout_below="@id/speaker_text_view"
	        android:layout_marginTop="20dp" />

	    <View
	        android:id="@+id/center"
	        android:layout_width="1dp"
	        android:layout_height="1dp"
	        android:layout_below="@+id/speaker_control"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="30dp"
	        android:gravity="center"/>
        <TextView 
            android:id="@+id/word_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/center"
            android:layout_marginBottom="10dp"
            android:text="@string/vol_ctrl_stream_title"            
            />
	    <ImageView
	        android:id="@+id/phone_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/word_part"
	        android:layout_margin="3dp"
	        android:layout_toLeftOf="@id/center"
	        android:src="@drawable/vc_phone" />

	    <ImageView
	        android:id="@+id/media_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_toLeftOf="@id/phone_icon"
	        android:layout_alignBottom="@id/phone_icon"
	        android:src="@drawable/vc_media" />

	    <ImageView
	        android:id="@+id/alert_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/phone_icon"
	        android:layout_margin="3dp"
	        android:layout_toRightOf="@id/center"
	        android:src="@drawable/vc_alert" />

	    <ImageView
	        android:id="@+id/alarm_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/phone_icon"
	        android:layout_margin="3dp"
	        android:layout_toRightOf="@id/alert_icon"
	        android:src="@drawable/vc_alarm" />

	</RelativeLayout>
    
</LinearLayout>
