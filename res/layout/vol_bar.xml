
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="6dp" >

        <TextView
            android:id="@+id/vol_bar_media_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:textSize="14sp"
            android:text="Media"/>

        <ImageView
            android:id="@+id/vol_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vol_bar_media_name"
            android:layout_alignLeft="@+id/vol_bar_media_name"
            android:layout_marginRight="10dp"/>
        <ProgressBar
            android:id="@+id/vol_bar_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vol_bar_icon"
            android:layout_below="@id/vol_bar_media_name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"/>


    </RelativeLayout>
